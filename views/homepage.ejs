    <title>หน้าหลัก</title>
    <link rel="stylesheet" href="/stylesheets/dorm.css" />
    <link rel="stylesheet" href="/stylesheets/homepage.css" />
  </head>

  <body>
    <% include navbar %>

    <div class="banner">
      <img
        src="/img_system/baner.jpg"
        class="w-100 h-100"
        alt="รูป banner"
        style="object-fit: cotain"
      />
      <div class="bottom-left" style="display: none">Bottom Left</div>
      <div class="top-left" style="display: none">Top Left</div>
      <div class="top-right" style="display: none">Top Right</div>
      <div class="bottom-right" style="display: none">Bottom Right</div>
      <div class="centered">
        สวัสดีทุก ๆ ท่าน ยินดีเข้าสู่เว็บไซต์หอพักของเรา <br />
        เว็บของเรายินดีให้บริการทุก ๆ ท่านครับ
      </div>
    </div>
    <div class="container container-me">
      <div class="row mySilde">
        <div class="owl-carousel">
          <% data.forEach(element=>{ %>
          <a href="find/<%=element._id %>" class="showSilde">
            <div class="item">
              <div class="card">
                <img
                  src="/image/<%=element._id %>/<%=element.images.img[1]%>"
                  alt="รูปภาพ"
                  
                />
              </div>
            </div>
          </a>
          <% }) %>
        </div>
      </div>


      <div class="row container-me-2" style="padding: 1%">
        <div class="zone-homepage alert alert-warning">
            <p>โซนหลังมอ</p>
        </div>
        <% data.forEach(element=>{ %>
        <% if(element.zone=="หลังมอ") { %>
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mt-2">
          <a href="find/<%=element._id %>">
            <div class="mycard" style="background:url('/image/<%=element._id%>/<%=element.images.img[0]%>')center no-repeat;   background-size: cover;">
              <div class="card__content">
                <h5 class="card__title"><%=element.name%></h5>
                <span class="card__subtitle"> ราคา <%=element.prices.monthly%> บาท</span>
                <p class="card_description"><%=element.detail%> </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
        <% }) %>
        <!--  -->
        
      <!--  -->
        <div class="zone-homepage alert alert-warning mt-4">
          <p>โซนกังสดาล</p>
        </div>
        <% data.forEach(element=>{ %>
          <% if(element.zone=="กังสดาล") { %>
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mt-2">
