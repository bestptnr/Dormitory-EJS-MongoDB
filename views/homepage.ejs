                <p class="card_description"><%=element.detail%> </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
        <% }) %>

        <div class="zone-homepage alert alert-warning mt-4">
          <p>โซนโคลัมโบ</p>
        </div>
        <% data.forEach(element=>{ %>
          <% if(element.zone=="โคลัมโบ") { %>
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mt-2">
          <a href="find/<%=element._id %>">
            <div class="mycard" style="background:url('/image/<%=element._id%>/<%=element.images.img[0]%>')center no-repeat;   background-size: cover;">
              <div class="card__content">
                <h5 class="card__title"><%=element.name%></h5>
                <span class="card__subtitle"> ราคา <%=element.prices.monthly%> บาท</span>
                <p class="card_description"><%=element.detail%> </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
        <% }) %>
        <div class="zone-homepage alert alert-warning mt-4">
          <p>โซนโนนม่วง</p>
        </div>
        <% data.forEach(element=>{ %>
          <% if(element.zone=="โนนม่วง") { %>
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mt-2">
          <a href="find/<%=element._id %>">
            <div class="mycard" style="background:url('/image/<%=element._id%>/<%=element.images.img[0]%>')center no-repeat;   background-size: cover;">
              <div class="card__content">
                <h5 class="card__title"><%=element.name%></h5>
                <span class="card__subtitle" > ราคา <%=element.prices.monthly%> บาท</span>
                <p class="card_description"><%=element.detail%> </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
        <% }) %>
        <div class="zone-homepage alert alert-warning mt-4">
          <p>โซนในเมือง</p>
        </div>
        <% data.forEach(element=>{ %>
          <% if(element.zone=="เมือง") { %>
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3 mt-2">
          <a href="find/<%=element._id %>">
            <div class="mycard" style="background:url('/image/<%=element._id%>/<%=element.images.img[0]%>')center no-repeat;   background-size: cover;">
              <div class="card__content">
                <h5 class="card__title"><%=element.name%></h5>
                <span class="card__subtitle"> ราคา <%=element.prices.monthly%> บาท</span>
                <p class="card_description"><%=element.detail%> </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
        <% }) %>
    </div>
  
    </div>
    <% include footer %>

    
